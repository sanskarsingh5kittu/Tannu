  <script>
    // Smooth scroll via custom buttons
    document.querySelectorAll("[data-scroll-to]").forEach(btn => {
      btn.addEventListener("click", () => {
        const targetId = btn.getAttribute("data-scroll-to");
        const el = document.getElementById(targetId);
        if (el) {
          el.scrollIntoView({ behavior: "smooth" });
        }
      });
    });

    // Side nav dot click behaviour
    const navDots = document.querySelectorAll(".nav-dot");
    navDots.forEach(dot => {
      dot.addEventListener("click", () => {
        const targetId = dot.getAttribute("data-target");
        const el = document.getElementById(targetId);
        if (el) {
          el.scrollIntoView({ behavior: "smooth" });
        }
      });
    });

    // IntersectionObserver: highlight active dot + animate-in
    const sections = document.querySelectorAll("section.slide");
    const options = { root: document.querySelector("main"), threshold: 0.55 };

    const popup = document.getElementById("transitionPopup");
    const popupText = document.getElementById("transitionText");
    let popupTimeout = null;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const id = entry.target.id;
        if (entry.isIntersecting) {
          // animate visible elements
          entry.target.classList.add("visible");
          const inner = entry.target.querySelector(".animate-in");
          if (inner) inner.classList.add("visible");

          // update nav dots
          navDots.forEach(dot => {
            dot.classList.toggle("active", dot.getAttribute("data-target") === id);
          });

          // show tiny transition popup with upcoming slide label
          const next = entry.target.nextElementSibling;
          if (next && next.classList.contains("slide")) {
            const nextId = next.id;
            const nextDot = [...navDots].find(d => d.getAttribute("data-target") === nextId);
            if (nextDot) {
              popupText.textContent = "Next: " + nextDot.getAttribute("data-label");
              popup.classList.add("show");
              if (popupTimeout) clearTimeout(popupTimeout);
              popupTimeout = setTimeout(() => popup.classList.remove("show"), 1800);
            }
          }
        }
      });
    }, options);

    sections.forEach(section => observer.observe(section));

    // Modal logic
    const modalBackdrop = document.getElementById("modalBackdrop");
    const modalClose = document.getElementById("modalClose");
    const modalTitle = document.getElementById("modalTitle");
    const modalBody = document.getElementById("modalBody");

    const modalContent = {
      overview: {
        title: "Project Overview",
        body: "This project offers a psychoanalytical reading of trauma, fragmentation, and healing in Rupi Kaur’s Milk and Honey. It brings together trauma theory, Freudian and Lacanian concepts, and feminist criticism to show how Kaur’s minimalistic poems give language and structure to experiences that often remain unspeakable."
      },
      structure: {
        title: "Why Fragmented Structure Matters",
        body: "The four-part structure—The Hurting, The Breaking, The Loving, The Healing—resembles stages of trauma and recovery, but the reader never moves smoothly from one to the next. Poems echo, contradict, and repeat. This non-linear design demonstrates how traumatised memory loops back on itself, resisting closure while still making space for gradual healing."
      },
      instapoetry: {
        title: "The Instapoetry Revolution",
        body: "Through social media circulation, Milk and Honey has brought trauma narratives into everyday digital spaces. While sometimes criticised as “simplistic,” its accessibility allows survivors to encounter complex ideas about violence, consent, and self-worth in an intimate, shareable form, reshaping who gets to participate in literary conversations."
      },
      contact: {
        title: "Contact & Acknowledgements",
        body: "Thank you for engaging with this work. I am grateful to my supervisor, peers, and readers who have contributed insights along the way. For further discussion or feedback, you can reach me after the session or via the contact details provided with this presentation."
      }
    };

    document.querySelectorAll("[data-open-modal]").forEach(btn => {
      btn.addEventListener("click", () => {
        const key = btn.getAttribute("data-open-modal");
        if (modalContent[key]) {
          modalTitle.textContent = modalContent[key].title;
          modalBody.textContent = modalContent[key].body;
        } else {
          modalTitle.textContent = "More Detail";
          modalBody.textContent = "You can customise this popup’s content in the JavaScript object 'modalContent'.";
        }
        modalBackdrop.classList.add("active");
      });
    });

    modalClose.addEventListener("click", () => modalBackdrop.classList.remove("active"));
    modalBackdrop.addEventListener("click", (e) => {
      if (e.target === modalBackdrop) modalBackdrop.classList.remove("active");
    });

    // Initial animation for first slide
    window.addEventListener("load", () => {
      const first = document.querySelector("#slide-1 .animate-in");
      if (first) first.classList.add("visible");
    });
  </script>
</body>
</html>
